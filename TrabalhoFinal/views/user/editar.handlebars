<div id="container">
<div id="header">
            <div class="titulo"> Editar dados </div>
            <div class="subtitulo">Atenção, esses dados são muito importantes!</div>
            <br>
</div>

<div id="main">
<div class="card">
    <div class="card-body">

        <form action="../editar/edit" method="post">
            <input type="hidden" name="id" value="{{user._id}}">

            <label for="nomeCompleto">Nome completo:</label>
            <div class="space1"></div>
            <input type="text"id="label"  name="nomeCompleto" id="nomeCompleto" value="{{user.nomeCompleto}}" class="form-control">
            <br><br>

            <label for="sexo">Sexo:</label>
            <div class="space1"></div>
            <select id="sexo" name="sexo" required="true" class="form-control">
                <option value="Feminino">Feminino</option>
                <option value="Masculino">Masculino</option>
                <option value="Outro">Outro</option>
            </select>
            <br><br>

            <label for="cartaoDoSus">Cartão do SUS:</label>
            <div class="space1"></div>
            <input type="text" id="label" name="cartaoDoSus" id="cartaoDoSus" value="{{user.cartaoDoSus}}" class="form-control">
            <br><br>

            <label for="cpf">CPF:</label>
            <div class="space1"></div>
            <input type="text" id="label" name="cpf" id="cpf" pattern="[0-9]{3}.[0-9]{3}.[0-9]{3}-[0-9]{2}" value="{{user.cpf}}" class="form-control">
            <br><br>

            <label for="logradouro">Endereço:</label>
            <div class="space1"></div>
            <input type="text" id="label" name="logradouro" id="logradouro" value="{{user.logradouro}}" class="form-control">
            <br><br>

            <label for="bairro">Bairro:</label>
            <div class="space1"></div>
            <input type="text" id="label" name="bairro" id="bairro" value="{{user.bairro}}" class="form-control">
            <br><br>

            <label for="numero">Número:</label>
            <div class="space1"></div>
            <input type="text" id="label" name="numero" id="numero" value="{{user.numero}}" class="form-control">
            <br><br>

            <label for="complemento">Complemento:</label>
            <div class="space1"></div>
            <input type="text" id="label" name="complemento" id="complemento" value="{{user.complemento}}" class="form-control">
            <br><br>

            <label for="dataNascimento">Data de nascimento:</label>
            <div class="space1"></div>
            <input type="date" id="label" name="dataNascimento" id="dataNascimento" class="form-control">
            <br><br>

            <label for="celular">Telefone Celular:</label>
            <div class="space1"></div>
            <input type="tel" id="label" name="celular" id="celular" pattern="[0-9]{2}-[0-9]{5}-[0-9]{4}" value="{{user.celular}}"
                class="form-control">
            <br><br>

            <label for="cor">Selecione sua cor/raça:</label>
            <div class="space1"></div>
            <select id="cor" name="cor" required="true" value="{{user.cor}}" class="form-control">
                <option value="Branca">Branca</option>
                <option value="Preta">Preta</option>
                <option value="Parda">Parda</option>
                <option value="Amarela">Amarela</option>
                <option value="Indígena">Indigena</option>
            </select>
            <br><br>

            <label for="profissao">Profissão:</label>
            <div class="space1"></div>
            <select name="profissao" id="profissao" required="true" value="{{user.profissao}}" class="form-control">
                <option value="Profissional da saúde">Profissional da saúde</option>
                <option value="Profissional da educação">Profissional da educação</option>
                <option value="Profissional de transportes">Profissional de transportes</option>
                <option value="Profissional militar">Profissional militar</option>
                <option value="Estudante">Estudante</option>
                <option value="Aposentado">Aposentado</option>
                <option value="Sem profissão">Sem profissão</option>
                <option value="Outro">Outro</option>
            </select>
            <br><br>

            <label for="doenca" onclick="fun()">Tem alguma <b>doença grave</b>?</label>
            <div class="space1"></div>
            <select name="doenca" id="doenca" required="true" value="{{user.doenca}}" class="form-control">
                <option onclick="fun()" value="sim">Sim</option>
                <option value="não">Não</option>
            </select>
            <br><br>

            <label for="email">E-mail:</label>
            <div class="space1"></div>
            <input type="text" id="label" name="email" id="email" value="{{user.email}}" class="form-control">
            <br><br>

            <label for="senha">Defina uma senha:</label>
            <div class="space1"></div>
            <input type="text" id="label" name="senha" id="senha" placeholder="Mínimo 5 dígitos..." minlength="5" required="true"
                value="{{user.senha}}" class="form-control">
            <br><br>

            <button type="submit" id="botao02" class="btn btn-success">Salvar</button>
        </form>
    </div>
</div>
</div>
</div>

        <div id="container">
                <div class="botoes">
                    <div class="content">
                    <a href="../home"><button type="button" id="botao03" class="btn btn-secondary">Voltar</button></a>
                    </div>
                </div>
        </div>

<script>
    document.getElementById('dataNascimento').max = new Date().toISOString().split("T")[0];
    document.getElementById('sexo').value = "{{user.sexo}}";
    document.getElementById('dataNascimento').value = new Date("{{user.dataNascimento}}").toISOString().split("T")[0];
    document.getElementById('cor').value = "{{user.cor}}";
    document.getElementById('profissao').value = "{{user.profissao}}";
    document.getElementById('doenca').value = "{{user.doenca}}";
    doencas =
        'AIDS (Síndrome da Imunodeficiência Adquirida)\n' +
        'Alienação mental\n' +
        'Cardiopatia grave\n' +
        'Cegueira (inclusive monocular)\n' +
        'Contaminação por radiação\n' +
        'Doença de Paget em estados avançados (Osteíte Deformante)\n' +
        'Doença de Parkinson\n' +
        'Esclerose múltipla\n' +
        'Espondiloartrose anquilosante\n' +
        'Fibrose cística (Mucoviscidose)\n' +
        'Hanseníase\n' +
        'Nefropatia grave\n' +
        'Hepatopatia grave' +
        'Neoplasia maligna (câncer)\n' +
        'Paralisia irreversível e incapacitante\n' +
        'Tuberculose ativa\n';
    function fun() {
        alert(doencas)
    }
</script>