<div id="container">
<div id="header">
            <div class="titulo"> Identifique-se! </div>
            <div class="subtitulo">Preencha os dados abaixo com atenção.</div>
            <br>
</div>

<div id="main">
<div class="card">
    <div class="card-body">
        
        <form action="/user/cadastrar/novo" method="post">
            <label for="nomeCompleto">Nome completo: <span id="ex">*Obrigatório</span></label></label>
            <div class="space1"></div>
            <input id="label" type="text" name="nomeCompleto" id="nomeCompleto" placeholder="Coloque seu nome..." required="true"
                class="form-control">
            <br><br>

            <label for="sexo">Sexo:<span id="ex">*Obrigatório</span></label>
            <div class="space1"></div>
            <select id="sexo" name="sexo" required="true" class="form-control">
                <option selected disabled="true" value="seleciona">Selecione</option>
                <option value="Feminino">Feminino</option>
                <option value="Masculino">Masculino</option>
                <option value="Outro">Outro</option>
            </select>
            <br><br>

            <label for="cartaoDoSus">Cartão do SUS:</label>
            <div class="space1"></div>
            <input id="label" type="text" name="cartaoDoSus" id="cartaoDoSus" placeholder="Número do cartão..."
                class="form-control">
            <br><br>

            <label for="cpf">CPF:<span id="ex">*Obrigatório</span></label>
            <div class="space1"></div>
            <input id="label"  type="text" name="cpf" id="cpf" pattern="[0-9]{3}.[0-9]{3}.[0-9]{3}-[0-9]{2}"
                placeholder="Ex.: 123.456.789-00" required="true" class="form-control">
            <br><br>

            <label for="logradouro">Endereço:<span id="ex">*Obrigatório</span></label>
            <div class="space1"></div>
            <input id="label" type="text" name="logradouro" id="logradouro" placeholder="Coloque seu endereço (Rua, Avenida, Travessa)..."
                required="true" class="form-control">
            <br><br>

            <label for="bairro">Bairro:<span id="ex">*Obrigatório</span></label>
            <div class="space1"></div>
            <input id="label" type="text" name="bairro" id="bairro" placeholder="Coloque seu bairro..." required="true"
                class="form-control">
            <br><br>

            <label for="numero">Número:<span id="ex">*Obrigatório</span></label>
            <div class="space1"></div>
            <input id="label" type="text" name="numero" id="numero" placeholder="Número da sua moradia..." required="true"
                class="form-control">
            <br><br>

            <label for="complemento">Complemento:</label>
            <div class="space1"></div>
            <input id="label" type="text" name="complemento" id="complemento" placeholder="Complemento perto da sua moradia..."
                class="form-control">
            <br><br>

            <label for="dataNascimento">Data de nascimento:<span id="ex">*Obrigatório</span></label>
            <div class="space1"></div>
            <input id="label" type="date" min="1850-01-01" name="dataNascimento" id="dataNascimento" required="true"
                class="form-control">
            <br><br>

            <label for="celular">Telefone Celular: <span id="ex">*Obrigatório</span></label>
            <div class="space1"></div>
            <input id="label" type="tel" name="celular" id="celular" pattern="[0-9]{2}-[0-9]{5}-[0-9]{4}"
                placeholder="Ex.: 88-92929-9493" required="true" class="form-control">
            <br><br>

            <label for="cor">Selecione sua cor/raça:<span id="ex">*Obrigatório</span></label>
            <div class="space1"></div>
            <select id="cor" name="cor" required="true" class="form-control">
                <option selected disabled="true" value="seleciona">Selecione</option>
                <option value="Branca">Branca</option>
                <option value="Preta">Preta</option>
                <option value="Parda">Parda</option>
                <option value="Amarela">Amarela</option>
                <option value="Indígena">Indigena</option>
            </select>
            <br><br>

            <label for="profissao">Profissão:<span id="ex">*Obrigatório</span></label>
            <div class="space1"></div>
            <select name="profissao" id="profissao" required="true" class="form-control">
                <option selected disabled="true" value="seleciona">Selecione</option>
                <option value="Profissional da saúde">Profissional da saúde</option>
                <option value="Profissional da educação">Profissional da educação</option>
                <option value="Profissional de transportes">Profissional de transportes</option>
                <option value="Profissional militar">Profissional militar</option>
                <option value="Estudante">Estudante</option>
                <option value="Aposentado">Aposentado</option>
                <option value="Sem profissão">Sem profissão</option>
                <option value="Outro">Outro</option>
            </select>
            <br><br>

            <label for="doenca" onclick="fun()">Tem alguma <b>doença grave</b>?<span id="ex">*Obrigatório</span></label>
            <div class="space1"></div>
            <select name="doenca" id="doenca" required="true" class="form-control">
                <option value="seleciona">Selecione</option>
                <option onclick="fun()" value="sim">Sim</option>
                <option value="não">Não</option>
            </select>
            <br><br>

            <label for="email">E-mail:<span id="ex">*Obrigatório</span></label>
            <div class="space1"></div>
            <input id="label" type="email" name="email" id="email" placeholder="Seu email..." required="true" class="form-control">
            <br><br>

            <label for="senha">Defina uma senha:<span id="ex">*Obrigatório</span></label>
            <div class="space1"></div>
            <input id="label" type="password" name="senha" id="senha" placeholder="Mínimo 5 dígitos..." minlength="5" required="true"
                class="form-control">
            <br><br>
            <button type="submit" id="botao02"class="btn btn-success">Cadastrar</button>
        </form>
    </div>
</div>
